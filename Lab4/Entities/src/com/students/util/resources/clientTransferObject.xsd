<xs:schema elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="clientTransferObject">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="command">
                    <xs:simpleType>
                        <xs:restriction base="xs:string">
                            <xs:enumeration value="ADD"/>
                            <xs:enumeration value="REMOVE"/>
                            <xs:enumeration value="START_EDITING"/>
                            <xs:enumeration value="APPLY_EDITING"/>  
                            <xs:enumeration value="FINISH_EDITING"/>  
                            <xs:enumeration value="REQUEST_ENTITIES"/>  
                            <xs:enumeration value="REQUEST_ENTITY_BY_ID"/>                    
                        </xs:restriction>
                    </xs:simpleType> 
                </xs:element>
                <xs:element name="entityType">
                    <xs:simpleType>
                        <xs:restriction base="xs:string">
                            <xs:enumeration value="ACTOR"/>
                            <xs:enumeration value="CHARACTER"/>
                            <xs:enumeration value="DIRECTOR"/>
                            <xs:enumeration value="MOVIE"/>
                            <xs:enumeration value="FAKE"/>
                            <xs:enumeration value="" />
                        </xs:restriction>
                    </xs:simpleType>
                </xs:element>
                <xs:element name="entity">
                    <xs:complexType>
                        <xs:choice>
                            <xs:sequence>
                                <xs:element type="xs:string" name="id"/>
                                <xs:element type="xs:string" name="name"/>
                                <xs:element type="xs:string" name="actor"/>
                                <xs:element type="xs:string" name="description"/>
                                <xs:element type="xs:string" name="movie"/>
                            </xs:sequence>
                            <xs:sequence>
                                <xs:element type="xs:string" name="id"/>
                                <xs:element type="xs:string" name="name"/>
                                <xs:element type="xs:string" name="birthCountry"/>
                                <xs:element type="xs:date" name="birthDate"/>
                                <xs:element name="characters">
                                    <xs:complexType>
                                        <xs:sequence>
                                            <xs:element type="xs:string" name="character" minOccurs="0" maxOccurs="unbounded"/>
                                        </xs:sequence>
                                    </xs:complexType>
                                </xs:element>
                            </xs:sequence>                               
                            <xs:sequence>
                                <xs:element type="xs:string" name="id"/>
                                <xs:element type="xs:string" name="name"/>
                                <xs:element type="xs:string" name="birthCountry"/>
                                <xs:element type="xs:date" name="birthDate"/>
                                <xs:element name="movies">
                                    <xs:complexType>
                                        <xs:sequence>
                                            <xs:element type="xs:string" name="movie" minOccurs="0" maxOccurs="unbounded"/>
                                        </xs:sequence>
                                    </xs:complexType>
                                </xs:element>
                            </xs:sequence>                                
                            <xs:sequence>
                                <xs:element type="xs:string" name="id"/>
                                <xs:element type="xs:string" name="name"/>
                                <xs:element type="xs:long" name="budget"/>
                                <xs:element name="characters">
                                    <xs:complexType>
                                        <xs:sequence>
                                            <xs:element type="xs:string" name="character" minOccurs="0" maxOccurs="unbounded"/>
                                        </xs:sequence>
                                    </xs:complexType>
                                </xs:element>
                                <xs:element type="xs:string" name="countries"/>
                                <xs:element type="xs:string" name="description"/>
                                <xs:element name="directors">
                                    <xs:complexType>
                                        <xs:sequence>
                                            <xs:element type="xs:string" name="director" minOccurs="0" maxOccurs="unbounded"/>
                                        </xs:sequence>
                                    </xs:complexType>
                                </xs:element>
                                <xs:element type="xs:int" name="duration"/>
                                <xs:element type="xs:string" name="genres"/>
                                <xs:element type="xs:date" name="releaseDate"/>
                            </xs:sequence>                                                  
                        </xs:choice>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>